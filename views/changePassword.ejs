<div class="mt-5">
  
  <form action="/users/changePassword" method="POST" class="m-auto border p-4">
    <h1 class="text-center">Change Password</h1>
    <%- include('./partials/messages') %>      
    <div class="form-group mt-5">
      <label for="password">New Password</label>
      <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"/>
    </div>
    <div class="form-group">
        <label for="password2">Confirm Password</label>
        <input type="password" id="password2" name="password2" class="form-control" placeholder="Enter Confirm Password"/>
      </div>
    <div class="d-block">
      <button type="submit" class="btn btn-info w-100"style="background-color: #1877f2;">Reset</button>
    </div>

  </form>
</div>
