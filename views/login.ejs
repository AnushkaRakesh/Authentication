<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fa fa-user"></i>  Login</h1>
        <%- include('./partials/messages') %>
        <form action="/users/login" method="POST">
          
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"/>
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"/>
          </div>

          <!-- div to show reCAPTCHA -->
          <div class="mb-3" >
            <div class="g-recaptcha" data-sitekey="6LcMIVUgAAAAADPRhRjOJWEh3SBVNXIRXuBaE9iD">
          </div>

        
          <div class="">
            <a href="/users/forget-password" class="mt-3 text-end" style="color: #1877f2;text-decoration:none;">Forget Password?</a>
            <button type="submit" class="btn btn-info  w-100 mt-3" style="background-color: #1877f2;">LOGIN</button> 
          </div>
          <hr class="my-4">
          <div class="mt-3">
            <a href="/users/auth/google" class=" btn-block btn btn-primary border " ><i class="fa fa-google me-2"></i>&nbsp&nbspSIGN IN WITH GOOGLE</a>
          </div>
          

        </form>
        <p class="lead mt-4">
          Not a member?<a href="/users/register" style="color: #1877f2;text-decoration:none;"> Register</a>
        </p>
      </div>
    </div>
  </div>


  