<div class="row mt-5 ">
    <div class="col-md-6 m-auto ">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fa fa-user-plus"></i> Register
        </h1>
        <%- include('./partials/messages') %>
        <form action="/users/register" method="POST">
          <div class="form-group ">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              required
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <!-- div to show reCAPTCHA -->
          <div class="mb-3" >
            <div class="g-recaptcha" data-sitekey="6LcMIVUgAAAAADPRhRjOJWEh3SBVNXIRXuBaE9iD">
          </div>
          
          <button type="submit" class="btn btn-info  w-100 mt-3" style="background-color: #1877f2;">SIGN UP</button>
        </form>
        <p class="lead mt-4 text-info text-center" ><a href="/users/login" style="color: #1877f2;text-decoration: none;">Already Have An Account?</a></p>
      </div>
    </div>
  </div>